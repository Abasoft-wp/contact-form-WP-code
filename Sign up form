    function checkbox_values($data)
    {
         $result = [];
             if(isset($data) && count($data) > 0){
            
             foreach($data as $value){
                 if($value){
            
                    $result[] = $value;
                 }
            
            }
            }
         $result = $result ? sanitize_text_field(implode(",", $result)) : "";
         return $result;

    }

